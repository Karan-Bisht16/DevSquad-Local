<%- include('./partials/header.ejs') %>

    <link rel="stylesheet" href="./css/style_donate.css">

    <div class="main">
        <h1>Donate Here</h1>
        <div class="registrationForm">
            <form>
                <label>Name: <br></label>
                <input type="text" placeholder=" Enter your name" name="name">
        
                <label>Age: <br></label>
                <input type="number" placeholder=" Enter your age" name="age">
    
                <label>Date of Donation: <br></label>
                <input type="date" name="dateOfDonation">
            
                <label>Type of Donation: </label>   
                <select id="option" name="type">
                    <option>Toys</option>
                    <option>Clothes</option>
                    <option>Books</option>
                    <option>Food</option>
                </select>
                <br>

                <div class="hidden" id="eventDiv" style="margin-top: 7.5px;">
                    <label for="eventType">Type of Event: </label>
                    <select id="eventType">
                        <option>Marriage</option>
                        <option>Function_1</option>
                        <option>Function_2</option>
                        <option>Function_3</option>
                    </select>
                </div>
    
                <label style="margin-top: 7.5px;">Mobile: <br></label>
                <input type="number" placeholder=" Enter your mobile number" name="mobileNumber">
    
                <label>Pickup Address: <br></label>
                <textarea name="pickupAddress" rows="3" placeholder=" Enter desired pickup address"></textarea>
                <br>
                
                <input type="submit" value="Donate" name="submit">
            </form>
        </div>
    </div>

<%- include('./partials/footer.ejs') %>

    <script src="./js/script_donate.js"></script>
</body>
</html>